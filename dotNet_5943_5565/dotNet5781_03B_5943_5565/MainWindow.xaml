<Window x:Class="dotNet5781_03B_5943_5565.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:dotNet5781_03B_5943_5565"
        mc:Ignorable="d"
        Title="I'm Bussing Here" Height="600" Width="1000">
    <Window.Resources>
        <DataTemplate x:Key="DriveDataTemplate" DataType="local:Bus">
            <Button Name="bDrive" Content="Drive" Click="bDrive_Click"></Button>
        </DataTemplate>
        <DataTemplate x:Key="FuelDataTemplate" DataType="local:Bus">
            <Button Name="bFuel" Content="Fuel" Click="bFuel_Click"></Button>
        </DataTemplate>
    </Window.Resources>
    <Grid Margin="0,0,3.333,-19.333">
        <Button x:Name="addBusButton" Content="Add Bus" HorizontalAlignment="Left" Height="21" Margin="39,366,0,0" VerticalAlignment="Top" Width="57" Click="addBusButton_Click"/>
        <ListView x:Name="lvBusses" HorizontalAlignment="Left" Height="276" Margin="39,41,0,0" VerticalAlignment="Top" Width="553">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Liscense Number" Width="Auto" DisplayMemberBinding="{Binding LicenseNumber}" />
                    <GridViewColumn Header="KM" Width="Auto" DisplayMemberBinding="{Binding MileageSinceTreatment}" />
                    <GridViewColumn Header="State" Width="50" DisplayMemberBinding="{Binding State}" />
                    <GridViewColumn Header="Drive" Width="Auto" CellTemplate="{StaticResource DriveDataTemplate}"/>
                    <GridViewColumn Header="Fuel" Width="Auto" CellTemplate="{StaticResource FuelDataTemplate}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
